<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key" />

    <EditText
        android:id="@+id/key_edit_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_key_here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value" />

    <EditText
        android:id="@+id/value_edit_text_field"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:gravity="left|top"
        android:hint="@string/type_value_here" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_to_cloud"
        android:onClick="writeToCloud"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_from_cloud"
        android:onClick="readFromCloud"/>



</LinearLayout>